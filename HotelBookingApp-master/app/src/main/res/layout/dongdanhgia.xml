<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#DFDBDB"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:background="#ffffff"
        app:cardCornerRadius="5dp"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageviewdanhgia"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="170dp"
                android:layout_height="140dp">
            </ImageView>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/tenuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="TÃªn user"
                        android:textColor="#0037FF"
                        android:textSize="20sp"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:id="@+id/markuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Mark"
                        android:textColor="#F81F1B1B"
                        android:textSize="18sp">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/detailuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Detail"
                    android:scrollbars="horizontal"
                    android:textColor="#D60454"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/headeruser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="header"
                    android:scrollbars="horizontal"
                    android:textColor="#000000"
                    android:textSize="16sp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>