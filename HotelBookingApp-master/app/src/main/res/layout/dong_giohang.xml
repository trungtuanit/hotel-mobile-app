<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:longClickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDBDB"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:longClickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp">
            <LinearLayout
                android:longClickable="true"
                android:id="@+id/thongtin_datphong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:longClickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:longClickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:text="Khách sạn"
                        android:textColor="#FF0000"
                        android:textSize="18sp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:longClickable="true"
                        android:id="@+id/textview_tenkhachsan"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:text="Tên khách sạn"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold">
                    </TextView>

                    <ImageView
                        android:longClickable="true"
                        android:id="@+id/image_giohang"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY">
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:longClickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:longClickable="true"
                        android:id="@+id/textview_tenloaiphong"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="Tên loại phòng"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:longClickable="true"
                        android:id="@+id/textview_giaphong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:text="Giá phòng"
                        android:textColor="#f20"
                        android:textSize="18sp">
                    </TextView>

                    <LinearLayout
                        android:longClickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:longClickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:longClickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="Số đêm:"
                                android:textColor="#000000"
                                android:textSize="15dp">
                            </TextView>

                            <TextView
                                android:longClickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="Số phòng:"
                                android:textColor="#000000"
                                android:textSize="15dp">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:longClickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/boder"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:longClickable="true"
                                    android:id="@+id/btminus_dem"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/boder2"
                                    android:focusable="false"
                                    android:text="-"
                                    android:textSize="20sp"
                                    android:textStyle="bold">
                                </Button>

                                <Button
                                    android:longClickable="true"
                                    android:id="@+id/btvalues_dem"
                                    android:layout_width="40dp"
                                    android:layout_height="35dp"
                                    android:background="@null"
                                    android:focusable="false"
                                    android:text="1"
                                    android:textSize="18sp">
                                </Button>

                                <Button
                                    android:longClickable="true"
                                    android:id="@+id/btplus_dem"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/boder2"
                                    android:focusable="false"
                                    android:text="+"
                                    android:textSize="20sp">
                                </Button>
                            </LinearLayout>


                            <LinearLayout
                                android:longClickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/boder"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:longClickable="true"
                                    android:id="@+id/btminus_phong"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/boder2"
                                    android:focusable="false"
                                    android:text="-"
                                    android:textSize="20sp"
                                    android:textStyle="bold">
                                </Button>

                                <Button
                                    android:longClickable="true"
                                    android:id="@+id/btvalues_phong"
                                    android:layout_width="40dp"
                                    android:layout_height="35dp"
                                    android:background="@null"
                                    android:focusable="false"
                                    android:text="1"
                                    android:textSize="18sp">
                                </Button>

                                <Button
                                    android:longClickable="true"
                                    android:id="@+id/btplus_phong"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/boder2"
                                    android:focusable="false"
                                    android:text="+"
                                    android:textSize="20sp">
                                </Button>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:longClickable="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:longClickable="true"
                            android:layout_width="115dp"
                            android:layout_height="34dp"
                            android:background="@drawable/boder2"
                            android:text="Chọn ngày"
                            android:id="@+id/bt_chonngay"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF">
                        </Button>
                        <Button
                            android:layout_marginLeft="10dp"
                            android:longClickable="true"
                            android:layout_width="100dp"
                            android:layout_height="34dp"
                            android:background="@drawable/boder2"
                            android:text="Dịch vụ khác"
                            android:id="@+id/bt_dichvu"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF">
                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>