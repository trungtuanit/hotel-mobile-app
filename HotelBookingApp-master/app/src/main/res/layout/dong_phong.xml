<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#DFDBDB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageviewchonphong"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="240dp">
            </ImageView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvtenphong"
                    android:textColor="#000000"
                    android:text="Tên sản phẩm"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:text="Giá cho: "
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:background="@mipmap/ic_launcher"
                        android:id="@+id/imageview_sokhach"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_width="16dp"
                        android:layout_height="19dp">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:text="Giường: "
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/textview_giuong"
                        android:textSize="14sp"
                        android:text="1 gường đơn"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:foregroundGravity="center"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/spinner"
                        android:textAlignment="center"
                        android:id="@+id/spinner_sodem"
                        android:gravity="center"
                        android:layout_width="140dp"
                        android:layout_height="36dp">
                    </Spinner>
                    <Spinner
                        android:foregroundGravity="center"
                        android:background="@drawable/spinner"
                        android:textAlignment="center"
                        android:id="@+id/spinner_sophong"
                        android:gravity="center"
                        android:layout_width="140dp"
                        android:layout_height="36dp">
                    </Spinner>
                </LinearLayout>
                <TextView
                    android:layout_gravity="right"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#FF0000"
                    android:text="Giá sản phẩm"
                    android:id="@+id/tvgiaphong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/bt_chonphong"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:text="Chọn"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_bt_chonphong"
                        android:layout_gravity="center"
                        android:layout_width="380dp"
                        android:layout_height="34dp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>